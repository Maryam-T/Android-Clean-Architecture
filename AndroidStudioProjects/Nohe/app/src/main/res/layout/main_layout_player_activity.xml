<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:weightSum="0.32">

        <RelativeLayout
            android:id="@+id/mLayout_play"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mIcon_song"
                android:layout_width="@dimen/round_icon_size"
                android:layout_height="@dimen/round_icon_size"
                android:layout_centerInParent="true" />

            <com.pooyeshgaran.wedsongs.Visualizer.CircleBarVisualizer
                android:id="@+id/mVisualizer"
                android:layout_width="@dimen/visualizer_size"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/mPlay_icon"
                android:layout_width="29dp"
                android:layout_height="33dp"
                android:src="@drawable/btn_play"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.04"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/mPrevious"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/btn_previus"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.pooyeshgaran.wedsongs.Views.TextBoldFont
                        android:id="@+id/mName_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorCatTitle"
                        android:textSize="@dimen/text_size_song_name"
                        android:gravity="center"/>

                    <com.pooyeshgaran.wedsongs.Views.TextRegularFont
                        android:id="@+id/mArtist_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorCatTitle"
                        android:textSize="@dimen/text_size_song_artist"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/mNext"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/btn_next"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mLayout_previous"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="horizontal" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"/>
                <LinearLayout
                    android:id="@+id/mLayout_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="horizontal" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.04"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal">

                        <com.pooyeshgaran.wedsongs.Views.TextRegularFont
                            android:id="@+id/mStart_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorCatTitle"
                            android:textSize="@dimen/text_size_duration"
                            android:text="00:00"
                            android:gravity="center"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center_horizontal">

                        <SeekBar
                            android:id="@+id/mSeek_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal">

                        <com.pooyeshgaran.wedsongs.Views.TextRegularFont
                            android:id="@+id/mEnd_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorCatTitle"
                            android:textSize="@dimen/text_size_duration"
                            android:text="00:00"
                            android:gravity="center"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.04"
                    android:weightSum="0.3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/mBtn_shuffle"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/btn_shuffle_de"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/mBtn_repeat"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/btn_repeat_de"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/mBtn_download"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/btn_download_de"/>
                        <ProgressBar
                            android:id="@+id/mProgress_bar"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:visibility="gone"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/mBtn_share"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/ico_share_de"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.01"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.034"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="0.2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.02"/>
                        <LinearLayout
                            android:id="@+id/mLayout_shuffle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.05"
                            android:orientation="horizontal" />
                        <LinearLayout
                            android:id="@+id/mLayout_repeat"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.03"
                            android:orientation="horizontal" />
                        <LinearLayout
                            android:id="@+id/mLayout_dl"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.03"
                            android:orientation="horizontal" />
                        <LinearLayout
                            android:id="@+id/mLayout_share"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.04"
                            android:orientation="horizontal" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.03"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"/>


</LinearLayout>
